{
  "name": "trackshows-api",
  "version": "0.0.1",
  "private": true,
  "description": "Trackshows API",
  "license": "MIT",
  "author": "Igor Leahu <igor.leahu24@gmail.com>",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0 --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "cli:dev": "ts-node -r tsconfig-paths/register src/cli/index.ts",
    "cli": "node dist/cli/index.js"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "dependencies": {
    "@nestjs/common": "8.2.1",
    "@nestjs/config": "^1.1.0",
    "@nestjs/core": "8.2.1",
    "@nestjs/graphql": "^9.1.1",
    "@nestjs/platform-express": "8.2.1",
    "@prisma/client": "^3.5.0",
    "apollo-server-core": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "axios": "^0.24.0",
    "axios-retry": "^3.2.4",
    "class-validator": "0.13.1",
    "commander": "^8.3.0",
    "graphql": "^15.7.2",
    "graphql-tools": "8.2.0",
    "nest-commander": "^2.3.4",
    "rambda": "^6.9.0",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@nestjs/cli": "8.1.4",
    "@nestjs/schematics": "8.0.5",
    "@nestjs/testing": "8.2.1",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.7",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "8.2.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "^7.0.4",
    "jest": "27.3.1",
    "lint-staged": "^12.0.2",
    "prettier": "2.4.1",
    "prisma": "^3.5.0",
    "rimraf": "^3.0.2",
    "supertest": "6.1.6",
    "ts-jest": "27.0.7",
    "ts-loader": "9.2.6",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.11.0",
    "typescript": "4.4.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --max-warnings 0 --fix",
      "prettier --write"
    ]
  },
  "prisma": {
    "seed": "bash ./scripts/cli.sh seed"
  }
}
